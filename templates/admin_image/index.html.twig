{% extends 'admin.html.twig' %}

{% block title %}Images{% endblock %}

{% block elementTitle %}Gallery{% endblock %}

{% block body %}



    <section id="columns">

        <div class="row">

            <div class="col-md-12 mt-1">
                <div class="card-columns ">

                    {% for result in results %}
                    <div class="card">
                        <div class="card-content">
                            <img class="card-img-top img-fluid" src="{{ asset('uploads/pictures/' ~ result.url) | imagine_filter('my_widen_filter') }}" alt="Card image cap">
                            <div class="card-body">
                                <h4 class="card-title">{{ result.name }}</h4>
                                <p class="card-text">
                                    {% for gallery in result.gallery %}
                                        <span>{{ gallery.name }}</span>
                                    {% endfor %}
                                </p>
                                <a href="{{ path('admin_image_edit', {'id':result.id}) }}" class="btn btn-outline-primary">Editer</a>
                                <a href="{{ path('admin_image_delete', {'id':result.id}) }}" class="btn btn-outline-primary">delete</a>

                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>

            </div>

        </div>
    </section>

{% endblock %}
