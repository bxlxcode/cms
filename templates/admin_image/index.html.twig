{% extends 'base.html.twig' %}

{% block title %}Images{% endblock %}

{% block body %}

    {% for result in results %}

        <div class="card">
            <img class="card-img-top" src="{{ asset('uploads/pictures/' ~ result.url) | imagine_filter('my_widen_filter') }}" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">{{ result.name }}</h5>

                <p class="card-text">
                    {% for tag in result.Tags %}
                        {{ tag.name }}

                        {% endfor %}
                </p>

                <a href="{{ path('admin_image_edit', {'id':result.id}) }}" class="btn btn-primary">Editer</a>
                <a href="{{ path('admin_image_delete', {'id':result.id}) }}" class="btn btn-primary">delete</a>
            </div>

        </div>

    {% endfor %}

{% endblock %}
