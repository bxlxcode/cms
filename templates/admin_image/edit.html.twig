                        {{ form_row(form.isPublish) }}

                        <div class="form-actions">
                            <button type="submit" class="btn btn-primary">
                                <i class="la la-check-square-o"></i> Mettre Ã  jour la photo
                            </button>
                        </div>

                        {{ form_end(form) }}
                    </div>


                </div>
            </div>


            <div class="col-md-6">

                <div class="card">
                    <div class="card-content">
                        <img class="card-img-top img-fluid" src="{{ asset('uploads/pictures/' ~ url) | imagine_filter('my_widen_filter') }}" alt="Card image cap">

                    </div>
                </div>


            </div>
        </div>



