{% block facebook %}{{ asset('uploads/pictures/' ~ url) | imagine_filter('facebook') }}{% endblock %}

{% block body %}





    <section id="basic-form-layouts">
        <div class="row match-height">
            <div class="col-md-6">
                <div class="card" style="height: auto;">
                    <div class="card-header">

                        {{ form_start(form) }}

                        {{ form_row(form.name) }}

                        {{ form_row(form.copyright) }}

