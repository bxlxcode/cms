{% extends 'admin.html.twig' %}

{% block title %}Homes{% endblock %}

{% block elementTitle %}Homes{% endblock %}

{% block body %}

    <div class="row">

        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Liste des homes</h4>
                    <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>

                </div>

                <div class="card-content collapse show">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                <tr>

                                    <th>id</th>
                                    <th>name</th>
                                    <th>description</th>
                                </tr>

                                </thead>
                                <tbody>

                                {% for result in results %}
                                    <tr>
                                        <th scope="row">{{ result.id }}</th>
                                        <td>{{ result.name }}</td>
                                        <td>{{ result.description }}</td>
                                    </tr>

                                {% endfor %}



                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <a href="{{ path('admin_home_add') }}"><button type="button" class="btn btn-outline-primary btn-min-width mr-1 mb-1">Ajouter une nouvelle home</button></a>

        </div>
    </div>
    </div>
{% endblock %}
